{
    "name": "zillow-ai-concierge-backend",
    "version": "1.0.0",
    "description": "Backend for Zillow AI Concierge",
    "main": "src/app.js",
    "scripts": {
      "start": "node src/server.js",
      "dev": "nodemon src/server.js",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage",
      "lint": "eslint .",
      "prepare": "husky install"
    },
    "dependencies": {
      "bcryptjs": "^2.4.3",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1",
      "express": "^4.18.2",
      "helmet": "^7.0.0",
      "jsonwebtoken": "^9.0.2",
      "mongoose": "^7.5.3",
      "morgan": "^1.10.0",
      "openai": "^4.12.1",
      "validator": "^13.11.0"
    },
    "devDependencies": {
      "eslint": "^8.50.0",
      "husky": "^8.0.3",
      "jest": "^29.7.0",
      "nodemon": "^3.0.1",
      "supertest": "^6.3.3"
    },
    "jest": {
      "roots": ["<rootDir>/src"],
      "testEnvironment": "node",
      "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
      },
      "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
      "testMatch": [
        "**/__tests__/**/*.+(js)",
        "**/?(*.)+(spec|test).+(js)"
      ]
    }
  }